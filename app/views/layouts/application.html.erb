<!DOCTYPE html>
<html>

<head>
  <title>Papito Retrô Games</title>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<nav class="navbar navbar-expand-lg navbar-dark bg-retro">
  <div class="container">
    <!-- <a class="navbar-brand" href="#">< / ></a> -->
    <a class="navbar-brand" href="#">
      <%= image_tag 'brand.png', width: "140px;" %>
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown"
      aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav">
        <li class="nav-item">
          <%= link_to 'Jogos', produtos_path, class: "nav-link" %>
        </li>
      </ul>
    </div>
    <%= form_tag produtos_path, method: :get, class: "form-inline" do %>
      <div class="form-group">
        <%= text_field_tag :nome, @nome_a_buscar, class: "form-control mr-sm-2" %>
        <%= button_to  "Buscar", nil, class: "btn btn-outline-success my-2 my-sm-0" %>
      </div>
    <% end %>
  </div>
</nav>


